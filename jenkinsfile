pipeline {
    agent any
 
    parameters {
        extendedChoice(name: 'BRANCH', description: 'Select a branch', defaultValue: 'master', groovyScript: '["master", "develop"]')
        string(name: 'COMMIT_ID', defaultValue: '', description: 'Enter the commit ID')
    }
 
    stages {
        stage('Checkout') {
            steps {
                script {
                    // If COMMIT_ID is not provided, get the latest commit ID from the selected branch
                    if (params.COMMIT_ID == '') {
                        env.GIT_COMMIT = sh(returnStdout: true, script: "git ls-remote https://github.com/your/repository.git ${BRANCH}^{commit} | cut -f 1").trim()
                    } else {
                        env.GIT_COMMIT = params.COMMIT_ID
                    }
                    git branch: "${BRANCH}", credentialsId: 'your-credentials-id', url: 'https://github.com/your/repository.git', changelog: false, quiet: true, revision: "${env.GIT_COMMIT}"
                }
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
    }
 
    post {
        success {
            echo "Branch: ${BRANCH}"
            echo "Commit ID: ${env.GIT_COMMIT}"
        }
    }
}
