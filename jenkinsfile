pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build and Test (Dev)') {
            steps {
                echo 'Building and testing code in Dev environment...'
                // Add your build and test commands here
            }
        }
        
        stage('Deploy to UAT') {
            when {
                // Define conditions for proceeding to UAT
                // Example: Only continue if the Dev build and test were successful
                expression {
                    currentBuild.result == 'SUCCESS'
                }
            }
            steps {
                echo 'Deploying to UAT environment...'
                // Add your deployment commands to UAT here
            }
        }

        stage('Test (UAT)') {
            steps {
                echo 'Testing code in UAT environment...'
                // Add your test commands for UAT here
            }
        }

        stage('Deploy to Production') {
            when {
                // Define conditions for proceeding to production
                // Example: Only continue if UAT testing was successful
                expression {
                    currentBuild.result == 'SUCCESS'
                }
            }
            steps {
                echo 'Deploying to Production environment...'
                // Add your deployment commands to production here
            }
        }
    }

    post {
        always {
            // Define any cleanup or notification steps here
            echo 'Pipeline execution completed'
        }
        success {
            echo 'Pipeline completed successfully'
        }
        failure {
            echo 'Pipeline failed'
        }
    }
}
